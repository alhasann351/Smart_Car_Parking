<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/sad_emoji"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/carparkingbd" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sad_emoji"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/eng_regu"
        android:padding="5dp"
        android:text="@string/exit_text"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_centerInParent="true"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:padding="10dp"
        android:gravity="center">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/no_button_bg"
            android:src="@drawable/no_button"
            android:id="@+id/no_btn"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/yes_button_bg"
            android:src="@drawable/yes_button"
            android:id="@+id/yes_btn"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>